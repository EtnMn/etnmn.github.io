---
import { Icon } from "astro-icon/components";
import NavigationLink from "./navigation-link.astro";

type Props = {
    icon?: string;
};

const { icon } = Astro.props;
---

<section class="mb-6">
    <div class="flex justify-between items-start">
        <h3 class="text-2xl mb-1 flex items-center">
            {icon && <Icon class="mr-2" name={icon} />}
            <slot />
        </h3>
        <slot name="breadcrumb">
            <NavigationLink to="/blog">posts</NavigationLink>
        </slot>
    </div>
    <slot name="tag-line" />
</section>
