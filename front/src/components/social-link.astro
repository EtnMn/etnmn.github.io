---
interface Props {
    url: string;
    profil?: string;
}

const { url, profil } = Astro.props;
const base = url?.endsWith("/") ? url.slice(0, -1) : url;
---

{
    url && profil && (
        <a
            href={`${base}/${profil}`}
            target="_blank"
            class="text-gray-500 hover:text-gray-900 dark:hover:text-white dark:text-gray-400"
        >
            <slot />
        </a>
    )
}
