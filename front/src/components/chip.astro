---
import { Icon } from "astro-icon/components";

interface Props {
    icon?: string;
}

const { icon } = Astro.props;
---

<div
    class="group rounded-lg flex gap-2 items-center border py-0.5 px-1.5 cursor-pointer text-gray-500 border-gray-500 hover:text-gray-900 hover:border-gray-900 dark:hover:text-white dark:text-gray-400 dark:hover:border-white dark:border-gray-400"
>
    {
        icon && (
            <Icon
                name={icon}
                class="w-5 h-5 text-gray-500 border-gray-500 group-hover:text-gray-900 group-hover:border-gray-900 dark:group-hover:text-white dark:text-gray-400 dark:group-hover:border-white dark:border-gray-400"
            />
        )
    }
    <slot />
</div>
