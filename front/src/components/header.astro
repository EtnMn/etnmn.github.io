---
import type { Config } from "@/layouts/base-layout.astro";
import Social from "@/components/social.astro";
import ThemeSelector from "@/components/theme-selector.astro";
import { Icon } from "astro-icon/components";

interface Props {
    config: Config;
}
const { config } = Astro.props;
---

<header class="flex flex-col">
    <ThemeSelector class="self-end mb-3" />
    <div class="flex flex-wrap justify-around gap-3 text-center sm:text-left">
        <div class="mt-3 mr-3 flex-grow">
            <h1 class="leading-tight text-4xl font-semibold">
                <a
                    href="/"
                    class="underline-offset-8 decoration-dashed hover:underline decoration-1"
                    >{config.personnal.name}</a
                >
            </h1>
            <h2 class="leading-tight font-light mb-2 text-2xl">
                {config.personnal.title}
            </h2>
        </div>
        <Social networks={config.socials}>
            {
                config.blog.enabled && (
                    <li class="inline-block pl-2">
                        <a
                            href="/blog"
                            class="text-gray-500 hover:text-gray-900 dark:hover:text-white dark:text-gray-400"
                            rel="noopener noreferrer"
                        >
                            <Icon name="feather" class="w-9 h-9" />
                        </a>
                    </li>
                )
            }
        </Social>
    </div>
</header>
