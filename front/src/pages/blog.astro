---
import BaseLayout from "@/layouts/base-layout.astro";
import Chip from "@/components/chip.astro";

const title = "Posts";
---

<BaseLayout title={title}>
    <h3 class="font-light mb-5">
        {title}
    </h3>
    <div class="grid gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-8">
        <section>
            <h4 class="leading-loose text-lg font-bold">2024</h4>
            <ul class="flex flex-col gap-y-6 my-6">
                <li class="group flex flex-col gap-2 sm:flex-row sm:gap-x-4">
                    <div class="min-w-32 text-sm leading-6">22 Jan 2024</div>
                    <div>
                        <a
                            data-astro-prefetch=""
                            href="/blog/markdown-elements/"
                            class="underline-offset-4 decoration-dashed hover:underline decoration-1"
                        >
                            A post of Markdown elements
                        </a>
                        <p class="line-clamp-3 block text-sm italic font-light">
                            This post is for testing and listing a number of
                            different markdown elements
                        </p>
                    </div>
                </li>
            </ul>
        </section>
        <aside>
            <h4 class="leading-loose">Tags</h4>
            <div class="flex flex-wrap gap-3">
                <Chip icon="hashtag">zzz</Chip>
                <Chip icon="github">zzz</Chip>
            </div>
        </aside>
    </div>
</BaseLayout>
